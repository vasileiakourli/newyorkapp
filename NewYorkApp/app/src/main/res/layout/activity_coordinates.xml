<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EnterCoordinates">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="FIND THE BEST PLACES OF NEW YORK!"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#ffffff"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/RED"
            android:textSize="24dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coords"
            android:text="ENTER COORDINATES\nLATITUDE BETWEEN 40.56 AND 40.98 \nLONGITUDE BETWEEN -74.27 AND -73.68"
            android:textStyle="italic"
            android:textAlignment="center"
            android:background="#ffffff"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/BLUE"
            android:textSize="18dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="Enter 1st latitude"
            android:id="@+id/lat1"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="Enter 2nd latitude"
            android:id="@+id/lat2"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="Enter 1st longitude"
            android:id="@+id/long1"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="Enter 2nd longitude"
            android:id="@+id/long2"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/error"
            android:text="Wrong input. Try again..."
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/RED"
            android:visibility="invisible"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true" />


    </LinearLayout>

</RelativeLayout>